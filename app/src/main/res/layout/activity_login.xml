<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/splash_drawable"
    android:gravity="center|top"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_logo_img"
        android:contentDescription="@string/application_logo"
        />

    <TextView
        android:id="@+id/login_logo_text"
        android:layout_width="@dimen/login_tf_logo_width"
        android:layout_height="140dp"
        android:text="@string/login_decs"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/login_tf_logo_margin_h"
        android:layout_marginEnd="@dimen/login_tf_logo_margin_h"

        android:layout_below="@id/login_logo"
        />

    <EditText
        android:id="@+id/tf_login_ime"
        android:layout_width="@dimen/login_tf_width"
        android:layout_height="40dp"
        android:background="@drawable/tf_login"
        android:padding="7dp"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/white_alpha"
        android:hint="@string/login_hint_ime"
        android:inputType="text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/login_tf_margin"
        android:layout_marginEnd="@dimen/login_tf_margin"
        android:layout_below="@id/login_logo_text"
        />

    <EditText
        android:id="@+id/tf_login_prezime"
        android:layout_width="@dimen/login_tf_width"
        android:layout_height="40dp"
        android:background="@drawable/tf_login"
        android:padding="7dp"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/white_alpha"
        android:hint="@string/login_hint_prezime"
        android:inputType="text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/login_tf_margin"
        android:layout_marginEnd="@dimen/login_tf_margin"
        android:layout_below="@id/tf_login_ime"
        />

    <EditText
        android:id="@+id/tf_login_bolnica"
        android:layout_width="@dimen/login_tf_width"
        android:layout_height="40dp"
        android:background="@drawable/tf_login"
        android:padding="7dp"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/white_alpha"
        android:inputType="text"
        android:hint="@string/login_hint_bolnica"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/login_tf_margin"
        android:layout_marginEnd="@dimen/login_tf_margin"
        android:layout_below="@id/tf_login_prezime"
        />

    <EditText
        android:id="@+id/tf_login_pin"
        android:layout_width="@dimen/login_pin_tf_width"
        android:layout_height="40dp"
        android:background="@drawable/tf_login"
        android:padding="7dp"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/white_alpha"
        android:textAlignment="center"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:hint="@string/login_hint_pin"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/login_pin_tf_margin_h"
        android:layout_marginEnd="@dimen/login_pin_tf_margin_h"
        android:layout_below="@id/tf_login_bolnica"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_below="@id/tf_login_pin"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/login_btn_margin_top"
        android:layout_marginStart="@dimen/login_btn_margin_h"
        android:layout_marginEnd="@dimen/login_btn_margin_h"
        android:background="@drawable/login_btn_bg"
        android:gravity="center"
        android:text="@string/login_btn_text"
        android:textColor="@color/white" />

</RelativeLayout>
